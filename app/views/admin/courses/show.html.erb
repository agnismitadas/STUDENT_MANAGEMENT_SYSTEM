<div class="col-lg-12">
<div class="card rounded-3 shadow mt-3 mb-3">
    <h1>Course Detail</h1>

    <p><strong>Name:</strong><%= @course.name%></p>
    <p><strong> Description:</strong><%= @course.description %></p>
    <div class="row mb-3">
    <div class="col-md-4">
    <%= link_to 'Back', admin_courses_path, class: "btn btn-outline-primary btn-sm" %>
    </div>
    <div class="col-md-4">
    <%= link_to 'edit',edit_admin_course_path(@course), class: "btn btn-outline-secondary btn-sm" %>
    </div>
    <div class="col-md-4">
    <%= link_to 'Delete', admin_course_path(@course), class: "btn btn-outline-danger btn-sm", data: {
  turbo_method: :delete,
  turbo_confirm: "Are you sure?"
} %>
    </div>
    </div>
</div>

</div>
