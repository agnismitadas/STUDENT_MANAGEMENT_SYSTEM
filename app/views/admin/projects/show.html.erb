<div class="col-lg-12">
<div class="card rounded-3 shadow mt-3 mb-5">
    <h1>Project Detail</h1>

    <p><strong>Name:</strong><%= @project.name%></p>
    <p><strong> Status:</strong><%= @project.status %></p>
    <div class="row mb-5 mt-3">
    <div class="col-md-4">
    <%= link_to 'Back', admin_projects_path, class: "btn btn-outline-primary btn-sm" %>
    </div>
    <div class="col-md-4">
    <%= link_to 'edit', edit_admin_project_path(@project), class: "btn btn-outline-secondary btn-sm" %>
    </div>
    <div class="col-md-4">
    <%= link_to 'Delete', admin_project_path(@project), class: "btn btn-outline-danger btn-sm", data: {
  turbo_method: :delete,
  turbo_confirm: "Are you sure?"
} %>
    </div>
    </div>
</div>
</div>
