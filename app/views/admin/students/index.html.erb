<%= search_form_for @q, url:admin_students_path do |form| %>
  <div class="form-group d-flex col-lg-6">
    <%= form.search_field :first_name_cont, class: "form-control me-2", placeholder: "Search by Name" %>
    <%= form.submit class: "btn btn-outline-success btn-sm" %>
  </div>
  <% end %> 
<h1>Listing Students</h1>
<%= link_to'New Student',new_admin_student_path %>
<table class="table table-striped">
  <thead>
    <tr class="table-dark text-center">
        <div class="col">
          <th>Student</th>
        </div>
        <div class="col">
          <th colspan="3">Actions</th>
        </div>
    </tr>
  </thead>
  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.full_name %> / <%= student.email %></td>
        <td><%= link_to 'view',admin_student_path(student) %></td>
        <td><%= link_to 'edit',edit_admin_student_path(student) %></td>
        <td><%= link_to 'Delete', admin_student_path(student.id), data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure?"
          } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
