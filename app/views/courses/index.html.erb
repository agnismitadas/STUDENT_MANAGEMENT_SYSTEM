<h1>Listing Courses</h1>
<%= link_to'Add Course',new_course_path %>
<table class="table table-striped">
  <thead>
    <tr class="table-dark text-center">
        <div class="col">
          <th>Name</th>
        </div>
        <div class="col">
          <th colspan="3">Actions</th>
        </div>
    </tr>
  </thead>
  <tbody>
    <% @courses.each do |course| %>
        <tr>
        <td><%= course.name %></td>
        <td><%= link_to 'View', course_path(course) %></td> <!-- Provide the course's id -->
        <td><%= link_to 'Edit', edit_course_path(course) %></td> <!-- Provide the course's id -->
        <td><%= link_to 'Delete', course_path(course), data: { turbo_method: :delete, confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>