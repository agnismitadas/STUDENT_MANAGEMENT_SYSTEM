<div class="col-lg-12">
<div class="card rounded-3 shadow mt-5 mb-5">
<div class="card body px-4">
    <h1>Course Detail</h1>

    <p><strong>Name:</strong><%= @course.name%></p>
    <p><strong> Description:</strong><%= @course.description %></p>
    <div class="row mb-5">
    <div class="col-md-4">
    <%= link_to 'Back', courses_path, class: "btn btn-outline-primary btn-sm" %>
    </div>
    <div class="col-md-4">
    <%= link_to 'edit', edit_course_path(@course), class: "btn btn-outline-secondary btn-sm" %>
    </div>
    <div class="col-md-4">
    <%= link_to 'Delete', course_path(@course), class: "btn btn-outline-danger btn-sm", data: {
  turbo_method: :delete,
  turbo_confirm: "Are you sure?"
} %>
    </div>
    </div>
</div>
</div>
</div>
